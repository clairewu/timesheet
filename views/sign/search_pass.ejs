<div id='content'>
	<div class='panel'>
		<div class='header'>
			<ul class='breadcrumb'>
				<li class='active'>Find the password</li>
			</ul>
		</div>
		<div class='inner'>
			<div class='sep10'></div>
			<div class='sep10'></div>
			<% if(locals.error){ %>
			<div class="alert alert-error">	
				<a class="close" data-dismiss="alert" href="#">&times;</a>
				<strong><%= error %></strong>
			</div>
			<% } %>
			<form id='search_pass_form' class='form-horizontal' action='/search_pass' method='post'>
				<div class='control-group'>
					<label class='control-label' for='email'>Email</label>
					<div class='controls'>
						<% if(locals.email){ %>
						<input class='input-xlarge' id='email' name='email' size='30' type='text' value='<%= email %>' />
						<% }else{ %>
						<input class='input-xlarge' id='email' name='email' size='30' type='text' />
						<% } %>
						<p class='help-block'>Please input the email when registoring the account</p>
					</div>
				</div>
				<div class='form-actions'>
					<input type='submit' class='btn' value='Submit' />
				</div>
			</form>
		</div>
	</div>	
</div>
